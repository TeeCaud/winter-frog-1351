<h1>Plots Index</h1>
<% @plots.each do |plot| %>
  <div id="plot-<%= "#{plot.number}" %>">
    <p>Plot: <%= plot.number %> </p>
    <% plot.plants.each do |plant| %>
    <%= "#{plant.name}" %>
    <%= link_to "Remove #{plant.name}", "/plots/#{plot.id}/plants/#{plant.id}", method: :delete %>
  <% end %>
  <br><br>
</div>
<% end %>
